<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.krygin.ophtha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".OphthaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_smart_sight_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_smart_sight_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".patients.PatientsActivity"
            android:label="@string/title_activity_patients"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".patients.PatientActivity" />
        <activity android:name=".snapshot.ViewSnapshotActivity" />
        <activity android:name=".comparation.ExaminationComparisionActivity" />
        <activity android:name=".patients.CreateOrUpdatePatientActivity" />
        <activity android:name=".examination.ExaminationActivity" />
        <activity android:name=".examination.CreateOrUpdateExaminationActivity"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="ru.krygin.ophtha.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

    </application>

</manifest>